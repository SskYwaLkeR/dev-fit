{
  "manifest_version": 3,
  "name": "Dev-Fit",
  "version": "1.0",
  "description": "A non-intrusive wellness timer for developers.",
  "permissions": ["alarms", "idle", "notifications", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
